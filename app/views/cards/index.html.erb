<h1>Listing cards</h1>

<table>
  <tr>
    <th>Phrase</th>
    <th>Word</th>
    <th>Pos</th>
    <th>Translation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.phrase %></td>
    <td><%= card.word %></td>
    <td><%= card.pos %></td>
    <td><%= card.translation %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

