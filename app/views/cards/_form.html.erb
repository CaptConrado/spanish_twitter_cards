<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :phrase %><br />
    <%= f.text_area :phrase %>
  </div>
  <div class="field">
    <%= f.label :word %><br />
    <%= f.text_field :word %>
  </div>
  <div class="field">
    <%= f.label :pos %><br />

    <select id="card_pos" name="card[pos]" type="radio">
      <option value="0">Part of Speech</option>
      <option value="Phrase">Phrase</option>
      <option value="Verb">Verb - Verbo</option>
      <option value="Noun">Noun - Sustantivo</option>
      <option value="Pronoun">Pronoun - Pronombre</option>
      <option value="Adjective">Adjective - Adjetivo</option>
    </select>
  </div>
  </div>
  <div class="field">
    <%= f.label :translation %><br />
    <%= f.text_field :translation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
